<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet"/>
    <link href="~/lib/bootstrap/css/call-outs.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="#">Simple Workflow</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown" style="cursor:pointer">
                            <a class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                My Requests
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" asp-action="Create">Create Request</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="RequestList" asp-route-_requestStatus="All">
                                    <i class="fa fa-folder"></i>
                                    View Request List
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fa fa-folder"></i>
                                    View Archive List
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="footer mt-auto py-3 fixed-bottom alert alert-info" style="margin-bottom:0">
        <div class="container text-center">
            <span class="text-muted">Harbin R. &copy; 2020. My Portfolio Samples.</span>
        </div>
    </div>

    <script src="~/lib/js/jquery.slim.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>
